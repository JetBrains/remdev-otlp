<idea-plugin>
    <extensionPoints>
        <extensionPoint name="allowedMetricsProvider"
                        interface="com.jetbrains.otp.exporter.AllowedMetricsProvider"
                        dynamic="true"/>
        <extensionPoint name="spanProcessorProvider"
                        interface="com.jetbrains.otp.exporter.processor.SpanProcessorProvider"
                        dynamic="true"/>
        <extensionPoint name="otlpConfigProvider"
                        interface="com.jetbrains.otp.exporter.OtlpConfigProvider"
                        dynamic="true"/>
    </extensionPoints>
    <extensions defaultExtensionNs="com.intellij">
        <backgroundPostStartupActivity implementation="com.jetbrains.otp.PluginInitializationService"/>
        <postStartupActivity implementation="com.jetbrains.otp.exception.handler.ErrorToSpanHandlerActivationActivity"/>
        <diagnostic.freezeNotifier implementation="com.jetbrains.otp.freeze.OtpFreezeNotifier"/>
        <applicationService serviceInterface="com.jetbrains.otp.settings.FrequentSpanFilterService"
                            serviceImplementation="com.jetbrains.otp.settings.OtpDiagnosticFrequentSpanFilterService"/>
    </extensions>
    <extensions defaultExtensionNs="com.jetbrains.otp.diagnostic">
        <allowedMetricsProvider implementation="com.jetbrains.otp.exporter.HardcodedListAllowedMetricsProvider"/>
    </extensions>
    <applicationListeners>
        <listener class="com.jetbrains.otp.exporter.SpansReceivedListener"
                  topic="com.intellij.platform.diagnostic.telemetry.impl.TelemetryReceivedListener"/>
    </applicationListeners>
</idea-plugin>